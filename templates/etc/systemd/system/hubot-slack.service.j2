[Unit]
Description={{ hubot_description }}
Requires=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory={{ hubot_home }}
User={{ hubot_user }}
Group={{ hubot_group }}
Restart=always
RestartSec=10

Environment="HUBOT_SLACK_TOKEN={{ hubot_slack_token }}"

ExecStart={{ hubot_home }}bin/hubot --adapter {{ hubot_adapter }}